<odoo>
   <!--Se coloca la regla para que los empleados solo puedan ver sus propias evaluaciones-->
    <record id="rule_employee_see_own_evaluations" model="ir.rule">
        <field name="name">EL empleado puede ver sus propias evaluaciones</field>
        <field name="model_id" ref="model_evaluacion_desempeno"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">
            [('employee_evaluated.user_id', '=', user.id)]
        </field>
    </record>

</odoo>
